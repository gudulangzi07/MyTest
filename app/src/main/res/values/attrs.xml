<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MyButton">
        <attr name="myButtonXRadius" format="dimension"/>
        <attr name="myButtonYRadius" format="dimension"/>
        <attr name="myButtonBackground" format="color"/>
        <attr name="myButtonTextColor" format="color"/>
        <attr name="myButtonTextSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="MyClock">
        <attr name="dayTextSize" format="dimension" />
        <attr name="hourTextSize" format="dimension" />
        <attr name="minTextSize" format="dimension" />
        <attr name="secTextSize" format="dimension" />
        <attr name="dayTextColor" format="color" />
        <attr name="hourTextColor" format="color" />
        <attr name="minTextColor" format="color" />
        <attr name="secTextColor" format="color" />
        <attr name="dayTextBackground" format="reference|color" />
        <attr name="hourTextBackground" format="reference|color" />
        <attr name="minTextBackground" format="reference|color" />
        <attr name="secTextBackground" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="TimeLine">
        <!--圆点大小-->
        <attr name="markerSize" format="dimension" />
        <!--圆点颜色或者图片-->
        <attr name="marker" format="color|reference" />
        <!--上面线段颜色或者图片-->
        <attr name="beginLine" format="color|reference" />
        <!--下面线段颜色或者图片-->
        <attr name="endLine" format="color|reference" />
        <!--线段粗细-->
        <attr name="lineSize" format="dimension" />
        <!--横向还是竖向-->
        <attr name="oritation" format="boolean" />
    </declare-styleable>

    <declare-styleable name="WatchStyle">
        <!-- 园的大小 -->
        <attr name="mWatchRadius" format="dimension"/>
        <!-- 园的线粗细 -->
        <attr name="mWatchStrokeWidth" format="dimension"/>
        <!-- 长刻度 -->
        <attr name="mWatchLongLine" format="dimension"/>
        <!-- 短刻度 -->
        <attr name="mWatchShortLine" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="RatingStarView">
        <attr name="starMargin" format="integer|dimension" />
        <attr name="cornerRadius" format="float|dimension" />
        <attr name="starForegroundColor" format="color|reference" />
        <attr name="starBackgroundColor" format="color|reference" />
        <attr name="strokeColor" format="color|reference" />
        <attr name="strokeWidth" format="float|dimension" />
        <attr name="starNum" format="integer" />
        <attr name="rating" format="float" />
        <attr name="starThickness" format="float|fraction" />
        <attr name="drawStrokeForEmptyStar" format="boolean" />
        <attr name="drawStrokeForFullStar" format="boolean" />
        <attr name="drawStrokeForHalfStar" format="boolean" />
        <attr name="enableSelectRating" format="boolean" />
        <attr name="onlyHalfStar" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircleProgress">
        <attr name="circleColor" format="color|reference" />
        <attr name="arcColor" format="color|reference" />
        <attr name="maxProgress" format="float|reference"/>
        <attr name="progress" format="float|reference"/>
    </declare-styleable>
</resources>